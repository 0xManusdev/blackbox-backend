{
	"compilerOptions": {
		"outDir": "./dist",
		"module": "ESNext",
		"target": "ES2023",
		"moduleResolution": "node",
		"types": [
			"node"
		],
		"lib": [
			"ES2020"
		],
		"sourceMap": true,
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@generated/*": [
				"generated/*"
			]
		}
	},
	"include": [
		"src/**/*",
		"generated/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}